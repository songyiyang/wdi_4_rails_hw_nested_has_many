<h1>Articles</h1>

<dl>

    <dt><%= link_to @article.title, user_article_path(@user.id, @article.id) %></dt>
    <dd><%= @article.body %></dd>

</dl>

<h2>Comments</h2>

<dl>
  <% @article.comments.each do |comment| %>
  <dt>Comment: </dt><dd><%= comment.body%></dd>
  <% end %>
</dl>

<%= link_to "New Comment", new_user_article_comment_path(@user.id, @article.id) %><br/>



<%= link_to "Back to User", user_path(@user) %>
