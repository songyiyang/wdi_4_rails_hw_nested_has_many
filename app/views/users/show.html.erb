<h1>User : <%= @user.name %></h1>
<p> User email: <%= @user.email %><p>
 <h3><%= link_to 'New article', new_user_article_path(@user.id) %></h3>
 <br><br>





<dl>
  <% @user.articles.each do |article| %>
  <dt><h2><%= link_to article.title, user_article_path(@user.id, article.id) %></h2></dt><dd><%= truncate(article.body, length: 120) %></dd><br><br>
  <% end %>
</dl>
<hr>

